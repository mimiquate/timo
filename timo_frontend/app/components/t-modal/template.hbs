<ModalDialog
  @onClose={{@closeModal}}
  @translucentOverlay={{true}}
  @containerClass="t-modal"
>
  <div class="t-modal__content {{@modalClass}}">
    <span class="t-modal__title">
      {{@title}}
    </span>
    <img
      alt="close button"
      class="t-modal__close"
      src="/images/close.svg"
      role="button"
      {{on "click" @closeModal}}
    >
    {{yield}}
  </div>
  {{#if (and @action @actionLabel)}}
    <div class="t-modal__actions-container">
      <button
        type="button"
        class="t-modal__button blue"
        data-test="cancel-button"
        {{on "click" @closeModal}}
      >
        Cancel
      </button>
      <button
        type="button"
        class="t-modal__button green"
        data-test="save-button"
        {{on "click" @action}}
      >
        {{@actionLabel}}
      </button>
    </div>
  {{/if}}
</ModalDialog>
