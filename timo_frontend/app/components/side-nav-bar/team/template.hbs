<div class="team-list {{if @selectedTeam "active"}}">
  <button
    data-test-team={{@index}}
    class="team-list__button"
    {{on "click" @goToTeam}}
  >
  <span class="team-list__name">{{@team.name}}</span>
  </button>
  <button
    {{on "click" @deleteTeamModal}}
    data-test-delete-team={{@index}}
    class="delete-team-button"
  >
    {{paper-icon "delete"}}
  </button>
</div>
