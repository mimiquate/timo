<TModal
  @title={{this.title}}
  @closeModal={{@closeModal}}
  @action={{@closeModal}}
  @actionLabel="Done"
  @modalClass="share-link__modal"
>
  <div class="share-link__link-input">
    <input
      disabled={{true}}
      value={{this.url}}
      onchange={{this.onChange}}
    />
    <div>
      <button
        class="share-link__copy-link-button"
        disabled={{this.disabledInput}}
        {{on "click" this.copyLink}}
      >
        Copy Link
      </button>
      <EmberTooltip @tooltipClass="share-link__tooltip" @event="click" @duration={{1000}}>
        Copied!
      </EmberTooltip>
    </div>
  </div>
  <div class="share-link__public-container">
    <strong>Public</strong>
    <TCheckbox
      @checked={{@team.public}}
      @onChange={{this.setPublic}}
      @label="Anyone with this link can view"
    />
  </div>
</TModal>
