<div data-test={{@dataTestName}}>
  <PaperDialog
    @clickOutsideToClose={{true}}
    @onClose={{@closeModal}}
    @origin={{@modalOrigin}}
  >
    <PaperToolbar>
      <PaperToolbarTools>
        <h1 data-test="member-modal-title">
          {{@title}}
        </h1>
        <span class="flex"></span>
        <PaperButton @iconButton={{true}} @onClick={{@closeModal}} data-test="close-member-modal">
          {{paper-icon "close"}}
        </PaperButton>
      </PaperToolbarTools>
    </PaperToolbar>
    <PaperDialogContent>
      <PaperForm class="layout layout-align-center flex" @onSubmit={{this.add}} as |form|>
        <div class="layout-column layout-align-center">
          <form.input
            @value={{this.memberName}}
            @label="Name"
            id="memberName-input"
            @onChange={{fn (mut this.memberName)}}
            @customValidations={{this.emptyInputValidation}}
          />
          <div class="member-modal-select">
            <PowerSelect
              @dropdownClass="timezone-ember-power-select"
              @placeholder="Time Zone"
              @searchPlaceholder="Search for a timezone..."
              @searchEnabled={{true}}
              @options={{this.timezoneList}}
              @selected={{this.memberTimeZone}}
              id="memberTimeZone-select"
              @onChange={{fn (mut this.memberTimeZone)}}
              as |timezone|
            >
              {{timezone}}
            </PowerSelect>
          </div>
          <form.submit-button
            @raised={{true}}
            @primary={{true}}
            data-test="saveMember-button"
          >
            Save
          </form.submit-button>
        </div>
      </PaperForm>
    </PaperDialogContent>
  </PaperDialog>
</div>
