<div class="timezone-list__row">
  <div class="timezone-list__details">
    <strong>{{this.country}}</strong> {{this.state}}
  </div>
  <div class="timezone-list__date">
    {{this.memberDate}}
  </div>
  <div class="timezone-list__time-zone" {{on "scroll" @scrollAll}}>
    {{#each @timezone.times as |time index|}}
      <TimezoneList::Timezone::Box
        @time={{time}}
        @scheduleEvent={{@scheduleEvent}}
        @onHover={{@onHover}}
        @mouseLeave={{@mouseLeave}}
        @index={{index}}
        @selected={{eq @hover index}}
        @isShowingCalendarPopover={{@isShowingCalendarPopover}}
        @toggleCalendarPopoverBackground={{@toggleCalendarPopoverBackground}}
      />
    {{/each}}
  </div>
</div>
