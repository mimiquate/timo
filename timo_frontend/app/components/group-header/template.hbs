<div class="group-header">
  <div class="group-header__container">
    <span class="group-header__title" data-test="team-title">
      {{@group.name}}
    </span>
    <span class="group-header__details" {{on "click" @openMemberListModal}} role="button">
      {{this.timezonesLabel}} | {{this.membersLabel}}
    </span>
  </div>
  <div class="group-header__actions">
    <TButton
      @testSelector="edit-team-button"
      @label="Edit team"
      @inverted={{true}}
      @action={{@openAboutTeamModal}}
    />
    <TButton
      @testSelector="add-member-button"
      @label="Add members"
      @action={{@addMember}}
    />
    <TButton
      @color="red"
      @testSelector="share-button"
      @label="Share"
      @action={{@openShareModal}}
    />
  </div>
</div>
