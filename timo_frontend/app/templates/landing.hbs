<PaperToolbar>
  <PaperToolbarTools>
    <div class="paper-right">
      <span data-test-rr="currentUser-span">
        {{session.currentUser.username}}
      </span>
    </div>
  </PaperToolbarTools>
</PaperToolbar>
<PaperSidenavContainer @class="inner-sidenav">
  <PaperSidenav @class="side-container" @lockedOpen={{true}}>
    <PaperToolbar>
      <PaperToolbarTools @class="side-title">Teams</PaperToolbarTools>
    </PaperToolbar>
    <PaperContent @padding={{true}} @class="side-content">
      <div>
        {{#if this.model.length}}
          Teams
        {{else}}
          You don't have any teams yet
        {{/if}}
      </div>
      <div>
        <label onclick={{action "addTeam"}}>
          <p>Add one</p>
        </label>
      </div>
    </PaperContent>
  </PaperSidenav>
  <PaperCardContent @class="flex flex-center">
    <img
      src="/images/earth-globe-pointer.svg"
      alt="BW Earth Globe background"
      class="landing-image"
    >
  </PaperCardContent>
</PaperSidenavContainer>