<PaperDialog
    @clickOutsideToClose={{true}}
    @onClose={{this.closeModal}}
    @origin={{this.modalOrigin}}
  >
  <PaperToolbar>
    <PaperToolbarTools>
      <h1 data-test="member-modal-title">
        {{this.title}}
      </h1>
      {{#if this.member}}
        <PaperButton @iconButton={{true}} @onClick={{action "deleteMemberModal"}} data-test="delete-member">
          {{paper-icon icon="delete"}}
        </PaperButton>
      {{/if}}
      <span class="flex"></span>
      <PaperButton @iconButton={{true}} @onClick={{this.closeModal}} data-test="close-member-modal">
        {{paper-icon icon="close"}}
      </PaperButton>
    </PaperToolbarTools>
  </PaperToolbar>
  <PaperDialogContent>
    <PaperForm class="layout layout-align-center" @onSubmit={{action "add"}} as |form|>
      <div class="layout-column layout-align-center">
        <form.input
          @value={{memberName}}
          @label="Name"
          id="memberName-input"
          @onChange={{action (mut memberName)}}
          @customValidations={{emptyInputValidation}}
        />
        <form.select
          @label="Time Zone"
          @options={{timezoneList}}
          @selected={{memberTimeZone}}
          @searchPlaceholder="Search for a timezone..."
          @searchEnabled={{true}}
          @closeOnSelect={{true}}
          id="memberTimeZone-select"
          @onChange={{action (mut memberTimeZone)}}
          @required={{true}}
          as |timezone|
        >
          {{timezone}}
        </form.select>
        <form.submit-button
          @raised={{true}}
          @primary={{true}}
          data-test="saveMember-button"
        >
          Save
        </form.submit-button>
      </div>
    </PaperForm>
  </PaperDialogContent>
</PaperDialog>
{{#if showDeleteMemberModal}}
  <DeleteMemberModal
    @closeDeleteMemberModal={{action "closeDeleteMemberModal"}}
    @memberName={{memberName}}
    @memberTimeZone={{memberTimeZone}}
    @deleteMember={{action "deleteMember"}}
    data-test="delete-member-modal"
  />
{{/if}}