<PaperDialog @clickOutsideToClose={{true}} @onClose={{closeDeleteTeamModal}}>
  <PaperDialogContent>
    <h2 class="md-title" data-test-delete-team="title">Confirm team deletion</h2>
    <span data-test-delete-team="message">
      Are you sure you want to delete team <strong>{{teamToDeleteName}}</strong> ?
    </span>
  </PaperDialogContent>
  <PaperDialogActions>
    <PaperButton @warn={{true}} @onClick={{closeDeleteTeamModal}} data-test-delete-team="cancel">
      Cancel
    </PaperButton>
    <PaperButton @primary={{true}} @onClick={{deleteTeam}} data-test-delete-team="yes">
      Yes
    </PaperButton>
  </PaperDialogActions>
</PaperDialog>