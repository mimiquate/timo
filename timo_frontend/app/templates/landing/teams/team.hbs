<GroupHeader
  @group={{@model}}
  @addMember={{this.newMember}}
  @openShareModal={{this.openShareModal}}
  @openMemberListModal={{this.openMemberListModal}}
  @openAboutTeamModal={{this.openAboutTeamModal}}
/>
{{#if this.sortedMembers.length}}
  <TimezoneList @timezones={{this.timezones}} @scheduleEvent={{this.scheduleEvent}} />
{{else}}
  <div class="no-member" data-test="no-member">
    No members in this team
  </div>
{{/if}}
{{#if this.newMemberModal}}
  <Modals::Members::Add
    @addOrUpdateMember={{this.saveMember}}
    @closeModal={{this.closeNewMemberModal}}
  />
{{/if}}
{{#if this.showShareModal}}
  <Modals::Team::Share
    @closeModal={{this.closeShareModal}}
    @team={{this.model}}
  />
{{/if}}
{{#if this.showMemberListModal}}
  <Modals::Members::List
    @members={{this.model.members}}
    @closeModal={{this.closeMemberListModal}}
  />
{{/if}}
{{#if this.showAboutTeamModal}}
  <Modals::Team::About
    @closeModal={{this.closeAboutTeamModal}}
    @team={{this.model}}
    @deleteTeam={{this.deleteTeam}}
  />
{{/if}}
