<div class="flex-title">
  <h1 data-test="team-title">
    {{this.model.name}}
  </h1>
</div>
{{#if this.model.members.length}}
  <EmberTable @class="member-content" as |t|>
    <t.head
      @columns={{columns}}
      @enableResize={{false}}
      @enableReorder={{false}}
      as |h|
    >
      <h.row @class="mat-header-row" as |hr|>
        <hr.cell @class="mat-header-cell" />
      </h.row>
    </t.head>

    <t.body @rows={{rows}} as |r|>
      <r.row @class="mat-row" as |rr|>
        <rr.cell @class="mat-cell" />
      </r.row>
    </t.body>
  </EmberTable>
{{else}}
  <div class="no-member" data-test="no-member">
    No members in this team
  </div>
{{/if}}
<PaperButton
  @raised={{true}}
  @fab={{true}}
  @accent={{true}}
  @onClick={{action "newMember"}}
  data-test="add-member-button"
  @class="add-button"
>
  +
</PaperButton>