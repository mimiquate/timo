<div class="no-team">
  <img src="/images/emptyview.svg" data-test="landing-image" alt="no team">
  <span class="no-team__label">Hi, there,<br> You donâ€™t have any teams yet!</span>
  <TButton
    @color="blue"
    @testSelector="create-team"
    @onClick={{this.openTeamModal}}
    @label="Create a team now!"
  />
  {{#if this.media.isMobile}}
    <TButton
      @color="blue"
      @testSelector="log-out"
      @onClick={{this.logOut}}
      @label="Log out"
    />
  {{/if}}
</div>
{{#if this.showNewTeamModal}}
  <Modals::Team::Add
    @closeModal={{this.closeNewTeamModal}}
    @saveTeam={{this.saveTeam}}
  />
{{/if}}
